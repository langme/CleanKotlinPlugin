<idea-plugin>
    <id>com.example.cleankotlin</id>
    <name>CleanKotlin Generator</name>
    <vendor>Votre Nom</vendor>
    <description>Générateur de structure Clean Architecture pour Kotlin</description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <!-- Suppression de la dépendance Android -->

    <actions>
        <action id="com.example.CleanKotlinAction"
                class="com.example.CleanKotlinAction"
                text="CleanKotlin"
                description="Crée une structure Clean Architecture"
                icon="/icons/cleanKotlin.svg">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>